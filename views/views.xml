<flectra>
  <data>
    <!-- model.name form view -->
    <record id="model_name_view_form" model="ir.ui.view">
      <field name="name">view.car.request.form</field>
      <field name="model">car.request</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <label for='name' class="oe_edit_only"/>
              <h1>
                <field name="name" placeholder="Request">
              </h1>
            </div>
            <
            <group>
                    <group>
                      <field name="date_from"/>
                      <field name="date_to"/>
                    </group>
                    <group>
                      <field name="employee_id"/>
                      <field name="car_id"/>
                    </group>  
            
            </group>
            
            
          </sheet>
        </form>
      </field>
    </record>

    <!-- model.name form view -->
    <record id="view_car_request_tree" model="ir.ui.view">
      <field name="name">view.car.request.tree</field>
      <field name="model">car.request</field>
      <field name="arch" type="xml">
          <tree string="Car Request Tree" create="true" delete="true" edit="true" editable="bottom">
              <field name="name"/>
              <field name="employee_id"/>
              <field name="car_id"/>
              <field name="date_from"/>
              <field name="date_to"/>
          </tree>
      </field>
    </record>

    <!-- model.name action window -->
    <record id="action_car_request_views" model="ir.actions.act_window">
      <field name="name">action.car.request</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">car.request</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Car Request
        </p><p>
          Click to Ceate a Car Request 
        </p>
      </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
    <menuitem id="_menu_car_request_root" name="Car Request" sequence="10"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="_menu_car_request_categ" name="" parent="_menu_car_request_root" sequence="1"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="_menu_car_request_act" name="Car Request" parent="_menu_car_request_categ" action="action_car_request_views" sequence="1"/>

  </data>
</flectra>